@model Maquillaje.Web.Models.Supplier

@{
    ViewBag.Title = "Details";
}

<div class="row col-12 justify-content-center ">
    <div class="col-md-6">
        <div class="card mb-4 m-3">
            <div class="card-header py-2 bg-light text-center">
                <h2>Detalles</h2>
                <h4 class="text-center text-white">@Model.SupplierName</h4>
            </div>
            <div class="card-body bg-danger">
                <table class="table table-sm text-white">
                    <tr>
                        <td>Código:</td>
                        <td>@Model.SupplierCode</td>
                    </tr>
                    <tr>
                        <td>Proveedor:</td>
                        <td>@Model.SupplierName</td>
                    </tr>
                    <tr>
                        <td>Correo Electrónico:</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Teléfono:</td>
                        <td>@Model.Phone</td>
                    </tr>
                   

                </table>
   
            </div>
        </div>
    </div>

</div>
<p class="col-md-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info btn-sm" })
    @Html.ActionLink("Regresar", "Index", new { id = Model.Id }, new { @class = "btn btn-warning btn-sm" })
    @Html.ActionLink("Eliminar", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger btn-sm" })

</p>
