                                <a class="dropdown-item" href="#">Delineador labial</a>
                                <a class="dropdown-item" href="#">Labiales</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                MAQUILLAJE PARA ROSTRO
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Base</a>
                                <a class="dropdown-item" href="#">Contorno</a>
                                <a class="dropdown-item" href="#">Corrector</a>
                                <a class="dropdown-item" href="#">Polvo</a>
                                <a class="dropdown-item" href="#">Prebase</a>
                                <a class="dropdown-item" href="#">Rubor y Bronceador</a>
                                <a class="dropdown-item" href="#">Iluminadores</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">MASCARILLAS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">MÁS...</a>
                        </li>





                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("Index", "Users")">USUARIOS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("Index", "Products")">PRODUCTOS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("Index", "Suppliers")">PROVEEDORES</a>
                            </li>
                            <li class="nav-item">
                                <a class="navbar-brand text-white" href="@Url.Action("Index","Home")">MAQUILLAJE</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-body" href="@Url.Action("Index", "Manage")">CAMBIAR CONTRASEÑA</a>
                            </li>


                        }


                        @if (User.IsInRole("Client"))
                        {
                            <li class="nav-item">
                                <a class="navbar-brand text-white" href="@Url.Action("Index","Home")">MAQUILLAJE</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("Index","Client")">MAQUILLAJE VIRTUAL</a>
                            </li>
                            <a class="nav-link text-body" href="@Url.Action("Index", "Manage")">CAMBIAR CONTRASEÑA</a>

                        }

                    </ul>
                </div>
            </div>
        </div>

    </nav>
    @RenderBody()
    <nav class="navbar navbar-expand-lg navbar-dark py-lg-4 bg-dark" id="mainNav">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item px-lg-4">
                    <a class="nav-link text-white" href="@Url.Action("Contact", "Home")">CONTACTO</a>
                </li>
                <li class="nav-item px-lg-4">
                    <a class="nav-link text-white" href="@Url.Action("About", "Home")">NOSOTROS</a>
                </li>
                <li class="nav-item px-lg-4">
                    <a class="nav-link text-white" href="@Url.Action("Consejos","Home")">CONSEJOS</a>
                </li>
            </ul>
        </div>

    </nav>


    <div class="bg-danger">
        <section class="copyright bg-danger py-2 text-center text-white ">
            <p class="text-center mb-5">
                Copyright&copy; @DateTime.Now.Year -Maquillaje- Proyecto Final 2020

                <a class="float-right" href="https://www.facebook.com"><img src="~/Content/img/f.png" alt="facebook" width="30" height="30"></a>
                <a class="float-right" href="https://www.twitter.com"><img src="~/Content/img/t.png" alt="twitter" width="30" height="30"></a>
                <a class="float-right" href="https://www.web.whatsapp.com"><img src="~/Content/img/w.png" alt="whatsapp" width="30" height="30"></a>
                <a class="float-right" href="https://www.whatsapp.com"><img src="~/Content/img/i.png" alt="instagram" width="30" height="30"></a>
            </p>
        </section>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
